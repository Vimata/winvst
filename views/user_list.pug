extends layout

block content

  h1= title
    .table-responsive
      table.table.table-striped
        thead
          tr
            th(scope=col) First Name
            th(scope=col) Last Name
            th(scope=col) Joined
        tbody
          each user in user_list 
            tr
              td 
                a(href=user.url) #{user.fullName}
              td #{user.joined}
        
          else
            li There are no users.